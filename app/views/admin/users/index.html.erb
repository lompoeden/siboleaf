<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Tasks</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <%if user.admin%>
          <td><strong class="text-success">Yes<strong></td>
        <%else%>
          <td><strong class="text-dark">NO<strong></td>
        <%end%>
        <td><%= link_to 'Show', admin_user_path(user.id), class: "btn btn-warning" %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user.id), class: "btn btn-success" %></td>
      <td><%= button_to 'Delete', admin_user_path(user.id), :method=>:delete, :class=>:destroy, class:"btn btn-danger btn-lg" %>
      </tr>
    <% end %>
  </tbody>
</table>

