<h1 class = "center">List of Users</h1>
<br>

<%= link_to 'Create user', new_admin_user_path, class: "btn btn-info" %>
<hr>

<div class="link center">
  <%= link_to 'Create user', new_admin_user_path, class: "btn btn-info" %>
</div>
<br>

<table class ="table table-striped">
  <thead>
    <tr>
      <th>UserID</th>
      <th>Username</th>
      <th>Email</th>
      <th>No. of tasks</th>
      <th>User admin priviledges</th>
      <th colspan="4"></th>
   </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.username, admin_user_path(user.id) %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.length %></td>
      <td><%= user.admin? ? "Yes":"No" %></td>
      <td><%= link_to 'Show', admin_user_path(user.id), class: "btn btn-warning" %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user.id), class: "btn btn-success" %></td>
      <td><%= button_to 'Delete', admin_user_path(user.id), :method=>:delete, :class=>:destroy, class:"btn btn-danger btn-lg" %>
    </tr>
    <% end %>
  </tbody>
</table>
