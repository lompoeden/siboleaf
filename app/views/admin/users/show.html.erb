<p id="notice"><%= notice %></p>

<div class="container d-flex justify-content-center">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">User</h5>
      <p class="card-text">
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
      <p class="card-text">
        <strong>Username:</strong>
        <%= @user.username %>
      </p>
      <table class="table">
        <thead>
          <tr>
            <th>NO</th>
            <th>Title</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Status</th>
            <th>Priority</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% t=0 %>

        <tbody>
          <% @user.tasks.each do |task| %>
            <tr>
              <td><%= t += 1 %></td>
              <td><%= task.title %></td>
              <td><%= task.start_date %></td>
              <td><%= task.end_date %></td>
              <td><%= task.status %></td>
              <%if task.priority.present?%>
                <%if task.priority == 1%>
                  <td>high</td>
                <%elsif task.priority == 2%>
                  <td>medium</td>
                <%elsif task.priority == 3%>
                  <td>low</td>
                <%end%>
              <%end%>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Edit', edit_admin_user_path(@user), class: "btn btn-primary" %>
      <%= link_to 'Back', admin_users_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
