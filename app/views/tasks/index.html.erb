        <td><%= task.content %></td>
        <td><%= task.startdate %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.created_at.strftime("%Hh%M min %Y, %B, %d") %></td>


        <td><%= link_to 'Show', task %></td>
        <td><%= link_to image_tag("https://img.icons8.com/metro/26/000000/edit.png"), edit_task_path(task) %></td>
        <td><%= link_to image_tag("https://img.icons8.com/material-rounded/26/000000/trash.png"), task, method: :delete, data: {confirm: "are you sure?"}%></td>

