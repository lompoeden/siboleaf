  <%= link_to "sort by priority", tasks_path(sort_priority: "true"),class:"nav-item"%>
    <%= search_form_for @search do |f| %>
      <%= f.label :status_search %>
      <%= f.search_field :status_cont %>
      <%= f.label :title_search %>
      <%= f.search_field :title_cont %>
