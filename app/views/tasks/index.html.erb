<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>startdate</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Enddate</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.startdate %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <%if task.priority.present?%>
          <%if task.priority == 1%>
            <td>high</td>
          <%elsif task.priority == 2%>
            <td>medium</td>
          <%elsif task.priority == 3%>
            <td>low</td>
          <%end%>
        <%end%>


        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

