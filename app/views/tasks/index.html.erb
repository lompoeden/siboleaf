<p id="notice"><%= notice %></p>

<div class="nav nav-pills nav-justified">
    <%= search_form_for @search do |f| %>
      <%= f.label :status_search %>
      <%= f.search_field :status_cont, placeholder:"Status search" %>
      <%= f.label :title_search %>
      <%= f.search_field :title_cont, placeholder:"Title search" %>
      <%= f.submit 'search'%>
    <% end %>
<div class="nav nav-pills nav-justified">
    <%= form_tag(tasks_path, method: :get,style:'') do %>
    <%= text_field_tag :search_label, params[:search_label],placeholder:"Search with Label"%>
    <%= submit_tag 'Search', name: nil%>
<% end %><br>


<table class="text-md-left table-striped">
  <thead>
    <tr>
      <th>NO</th>
      <th>Name</th>
      <th>Remarks</th>
      <th><%= link_to 'Sort by creation', tasks_path(sort_creation: "true") %></th>
      <th><%= link_to 'Sort by enddate', tasks_path(sort_enddate: "true") %></th>
      <th>Status</th>
      <th><%= link_to 'Sort by priority', tasks_path(sort_priority: "true") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% t=0 %>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
              <td><%= link_to task.title ,task_path(task.id) %></td>
              <td><%= task.content %></td>
              <td><%= task.created_at.strftime('%Y/%-m/%-d') %></td>
              <td><%= task.status %></td>
              <td><%= task.priority %></td>

              <td><%= link_to 'Show', task, class: "btn btn-warning" %></td>
            <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %></td>
            <td><%= link_to 'Delete', task, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

